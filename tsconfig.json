{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./lib",
    "skipLibCheck": true
  },
  "include": ["lib/**/*", "../index.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "extends": "@tsconfig/node18/tsconfig.json"
}
